{% extends 'backoffice/layout.html.twig' %}
{% block title %}Modifier l'enseignant {{teacher.name}}{% endblock %}
{% block content_back %}
<h1>Modifier l'enseignant {{teacher.name}}</h1>
<form action="{{ path('backoffice_teacher_update', {id: teacher.id}) }}" enctype="multipart/form-data" method="POST">

  <div class="form-group row">
    <label class="col-2 col-form-label">Nom :</label>
    <div class="col-2">
      <input type="text" name="name" class="form-control" value='{{teacher.name}}'  placeholder='{{teacher.name}}' required/>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-2 col-form-label">Module(s) associ√©(s) :</label>
    <div class="col-8">
      <select name="module" class="form-select">
        {% for module in modules %}
        <option value='{{ module.id }}'> {{ module.name }}</option>
        {% endfor %}
      </select>
    </div>
  </div>

  <div class="form-group row">
    <div class="offset-2">
      <button class="btn btn-primary">Modifier {{teacher.name}}</button>
      <a href="{{ path('backoffice_teacher_index') }}" class="btn btn-link">Annuler</a>
    </div>
  </div>

</form>
{% endblock %}

