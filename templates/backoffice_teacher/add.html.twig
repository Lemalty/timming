{% extends 'backoffice/layout.html.twig' %}
{% block title %}Ajouter un enseignant{% endblock %}
{% block content_back %}
<h1>Ajouter un nouvel enseignant</h1>
<form action="{{ path('backoffice_teacher_save') }}" enctype="multipart/form-data" method="POST">

  <div class="form-group row">
    <label class="col-2 col-form-label">Nom :</label>
    <div class="col-8">
      <input type="text" name="name" class="form-control"  required/>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-2 col-form-label">Module(s) associ√©(s) :</label>
    <div class="col-8">
      <select name="module" class="form-select" multiple>
        {% for module in modules %}
        <option value='{{ module.id }}'> {{ module.name }}</option>
        {% endfor %}
      </select>
    </div>
  </div>

  <div class="form-group row">
    <div class="offset-2">
      <button class="btn btn-primary">Ajouter cet enseignant</button>
      <a href="{{ path('backoffice_teacher_index') }}" class="btn btn-link">Annuler</a>
    </div>
  </div>

</form>
{% endblock %}

