{% extends 'base.html.twig' %}

{% block title %}Projet TiMMIng{% endblock %}

{% block stylesheets %}
<style>
    body{
        background-color: #15202b;
        color: white;
    }
    header{
        display: flex;
        justify-content: center;
        flex-direction: column;
        align-items: center;
        position: relative;
    }
    header a{
        text-decoration: none;
        color: #fff;
        background-color: #137daa;
        padding: 7px 10px;
        border-radius: .33rem;
        border: 2px solid #143557;
        position: absolute;
        top: 15px;
        right: 20px;
    }
    header a:hover{
        text-decoration: none;
        color: #fff;
        background-color: #143557;
        border: 2px solid #137daa;
    }
    .titre{
        margin: 40px 0 60px;
        font-weight: 900;
    }
    .align-middle{
        vertical-align: middle !important;
        text-align: center;
    }
    .list-group-item{
        background-color: #0e161d ;
        border: 1px solid rgba(0,0,0,.5);
    }
    .list-group{
        -webkit-box-shadow: 5px 5px 15px 5px #000000; 
        box-shadow: 5px 5px 15px 5px #000000;
    }
    h1{
        margin-bottom: 20px;
    }
    a{
        color:white !important;
    }
    .list-group-item:hover, .list-group-item:focus{
        background-color: #080808 !important;
    }
</style>
{% endblock %}

{% block body %}

<header>
    <h1 class="titre">Projet TIMMING</h1>
    <a href="{{ path( 'backoffice_index')}}">Log-in</a>
</header>
<main>
    <div class="container">
        <div class="row">
            <div class="col-6">
                <h1 class="text-center">MMI.1</h2>
                <div class="list-group text-center">
                    <a href="/home/1/1" class='list-group-item list-group-item-action'>TP1</a>
                    <a href="/home/1/2" class='list-group-item list-group-item-action'>TP2</a>
                    <a href="/home/1/3" class='list-group-item list-group-item-action'>TP3</a>
                    <a href="/home/1/4" class='list-group-item list-group-item-action'>TP4</a>
                </div>
            </div>
            <div class="col-6">
                <h1 class="text-center">MMI.2</h2>
                <div class="list-group text-center">
                    <a href="/home/2/1" class='list-group-item list-group-item-action'>TP1</a>
                    <a href="/home/2/2" class='list-group-item list-group-item-action'>TP2</a>
                    <a href="/home/2/3" class='list-group-item list-group-item-action'>TP3</a>
                    <a href="/home/2/4" class='list-group-item list-group-item-action'>TP4</a>
                </div>
            </div>
        </div>
    </div>
</main>
{% endblock %}
