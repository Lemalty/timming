{% extends 'backoffice/layout.html.twig' %}
{% block title %}Ajouter un utilisateur{% endblock %}
{% block content_back %}
<h1> Ajouter un nouvel utilisateur</h1>
<form action="{{ path('backoffice_admin_save') }}" enctype="multipart/form-data" method="POST">
  <div class="form-group row">
    <label class="col-2 col-form-label">Email :</label>
    <div class="col-8">
      <input type="email" name="email" class="form-control"  required/>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-2 col-form-label">Mot de passe :</label>
    <div class="col-8">
      <input type="password" name="password" class="form-control"  required/>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-2 col-form-label">Role :</label>
    <div class="col-8">
      <select name="roles" class="form-select">       
        <option value="ROLE_ADMIN"> Admin</option>
        <option value="ROLE_WRITER"> Writer</option>
      </select>
    </div>
  </div>
  
  
  <div class="form-group row">
    <div class="offset-2">
      <button class="btn btn-primary">Ajouter cet utilisateur</button>
      <a href="{{ path('backoffice_admin_index') }}" class="btn btn-link">Annuler</a>
    </div>

  </div>
</form>
{% endblock %}
