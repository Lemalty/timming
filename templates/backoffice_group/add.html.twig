{% extends 'backoffice/layout.html.twig' %}
{% block title %}Ajouter un groupe{% endblock %}
{% block content_back %}
<h1>Ajouter un nouveau groupe</h1>
<form action="{{ path('backoffice_group_save') }}" enctype="multipart/form-data" method="POST">

  <div class="form-group row">
    <label class="col-2 col-form-label">Nom :</label>
    <div class="col-2">
      <input type="text" name="name" class="form-control"  required/>
    </div>
  </div>

      <div class="form-group row">
    <label class="col-2 col-form-label">Type de groupe :</label>
    <div class="col-2">
      <select type="text" name="type" class="form-control" required>
        <option value='TP' default>TP</option>
        <option value='TD'>TD</option>
        <option value='CM'>CM</option>
      </select>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-2 col-form-label">Saison d'enseignement (YYYY-YYYY) :</label>
    <div class="col-2">
      <input type="text" maxlength="9" name="campain" class="form-control" required/>
    </div>
  </div>

    <div class="form-group row">
    <label class="col-2 col-form-label">Semestre :</label>
    <div class="col-2">
      <select type="text" name="semester" class="form-control" required>
        <option value='1' default>1</option>
        <option value='2'>2</option>
        <option value='3'>3</option>
        <option value='4'>4</option>
      </select>
    </div>
  </div>

  <div class="form-group row">
    <div class="offset-2">
      <button class="btn btn-primary">Ajouter ce groupe</button>
      <a href="{{ path('backoffice_group_index') }}" class="btn btn-link">Annuler</a>
    </div>
  </div>

</form>
{% endblock %}

{% block additional_js %}
{% endblock %}